@model ReviewSite.Models.Review
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link href="~/css/Main.css" rel="stylesheet" />
    <link href="~/css/nav.css" rel="stylesheet" />
    <script src="~/JavaScript/DetailsScript.js"></script>
    <script src="~/JavaScript/Tags.js"></script>
    <script>
        var reviewId = @Model.Id;
    </script>


</head>
<body>
    <main>
        <section>
            <h1 align="center">@Model.Title</h1>

            <h2>Category: @Model.Category.Name</h2>

            <div id="next">
                @if (Model.Id == 9)
                {
                    Model.Id = 0;
                }
                <a href="/review/details/@(Model.Id+1)" class="button"><span>Next</span></a>
            </div>

            <div id="content">
                <p>@Model.Content</p>
                <img src="@Model.ImageUrl" alt="@Model.Title" />

            </div>
        </section>
        <section id="tags">
            <h3>Tags:</h3>
            <ul id="tag-list"></ul>
        </section>
        <section id="add-tags">
            <h3>New Tag</h3>
            <textarea id="new-tag"></textarea>
            <button id="save-tag">Add</button>
        </section>

        <section id="comments">
            <h2>Comments</h2>
            <ol id="comment-list"></ol>
        </section>
        <section id="add-comments">
            <h3>New Comment</h3>
            <textarea id="new-comment"></textarea>
            <button id="save-comment">Save</button>
        </section>
    </main>

    <nav>
        <a href="/">Home</a>
        <a href="/review/allreviews/">All Reviews</a>
        <a href="/category/index/">All Categories</a>
    </nav>
    <script src="~/JavaScript/Script.js"></script>


</body>
</html>
